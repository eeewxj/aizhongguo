<h1>Listing residents</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Gender</th>
      <th>Birthday</th>
      <th>Home address</th>
      <th>Condition</th>
      <th>Phone number</th>
      <th>Contact</th>
      <th>Contact phone number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @residents.each do |resident| %>
      <tr>
        <td><%= resident.name %></td>
        <td><%= resident.gender %></td>
        <td><%= resident.birthday %></td>
        <td><%= resident.home_address %></td>
        <td><%= resident.condition %></td>
        <td><%= resident.phone_number %></td>
        <td><%= resident.contact %></td>
        <td><%= resident.contact_phone_number %></td>
        <td><%= link_to 'Show', resident %></td>
        <td><%= link_to 'Edit', edit_resident_path(resident) %></td>
        <td><%= link_to 'Destroy', resident, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

