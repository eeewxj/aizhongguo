
<div class="col-xs-11 row new_nurse background_white">
<h1>信息列表</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>反馈人</th>
      <th>收件人</th>
      <th>内容</th>
      <th>状态</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.sender.name %></td>
        <td><%= message.receiver.name %></td>
        <td>
          <%= message.content[0..Constants::MAX_NUMBER_OF_LIST_LINE] %>
          <%= "..." if message.content.length > Constants::MAX_NUMBER_OF_LIST_LINE  %>
        </td>
        <td><%= Constants::MESSAGE_STATUS.key(message.status) %></td>
        <td><%= link_to ' 点击查看 ', message %></td>
        <!--<td><%= link_to 'Edit', edit_message_path(message) %></td>-->
        <td><%= link_to ' 删除 ', message, method: :delete, data: { confirm: '确定删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
