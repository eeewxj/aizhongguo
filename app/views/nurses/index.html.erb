
<div class="col-xs-11 row reg_project">
<table class="table table-bordered">
  <thead>
    <tr>
      <th>姓名</th>
      <th>手机</th>
      <th>性别</th>
      <th>年龄</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nurses.each do |nurse| %>
      <tr>
        <td><%= nurse.name %></td>
        <td><%= nurse.phone %></td>
        <td><%= Constants::GENDER.key(nurse.gender) %></td>
        <td><%= nurse.age %></td>
        <td><%= link_to '查看', nurse %></td>
        <td><%= link_to '编辑', edit_nurse_path(nurse) %></td>
        <td><%= link_to '删除', nurse, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
