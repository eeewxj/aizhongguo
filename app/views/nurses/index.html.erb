<h1>Listing nurses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Birthday</th>
      <th>Gender</th>
      <th>Phone</th>
      <th>Hometown</th>
      <th>Home</th>
      <th>Education</th>
      <th>Previous job</th>
      <th>Religion</th>
      <th>Interests</th>
      <th>Background</th>
      <th>Nursing</th>
      <th>Nursing home</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nurses.each do |nurse| %>
      <tr>
        <td><%= nurse.name %></td>
        <td><%= nurse.birthday %></td>
        <td><%= nurse.gender %></td>
        <td><%= nurse.phone %></td>
        <td><%= nurse.hometown %></td>
        <td><%= nurse.home %></td>
        <td><%= nurse.education %></td>
        <td><%= nurse.previous_job %></td>
        <td><%= nurse.religion %></td>
        <td><%= nurse.interests %></td>
        <td><%= nurse.background %></td>
        <td><%= nurse.nursing %></td>
        <td><%= nurse.nursing_home_id %></td>
        <td><%= link_to 'Show', nurse %></td>
        <td><%= link_to 'Edit', edit_nurse_path(nurse) %></td>
        <td><%= link_to 'Destroy', nurse, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

