<div id="login" class="row">
  <%= form_tag "/user/login", :method => :post do %>



    <table cellspacing="0" cellpadding="0">
      <tr>
        <td>
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">邮箱</span>
            <input id="email" name="email" type="text" class="form-control" placeholder="请输入邮箱" aria-describedby="basic-addon1">
          </div>
        </td>
        <td>&nbsp;
          <%= check_box_tag 'rmbUser', true  %>
          <%= label_tag 'rmbUser', "记住我" %>
        </td>
        <td>&nbsp;<a href="/users/new" class="btn btn-default">注册</a></td>
      </tr>
      <tr>
        <td> 
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">密码</span>
            <input id="password" name="password" type="password" class="form-control" placeholder="请输入密码" aria-describedby="basic-addon1">
          </div>
        </td>
        <td>&nbsp;
           <%= submit_tag '登录', class: "btn btn-primary" %>
        </td>               
      </tr>
    </table>
  <% end %>
</div>	
