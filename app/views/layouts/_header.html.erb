<div class="col-xs-11 row header">

  <div class="col-xs-1 back">
    <%= link_to :root do %>
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <% end %>
  </div>
  <div class="col-xs-11"></div>

  <ul class="nav nav-tabs text-center" style="font-size:16px">
    <% if (!current_user.nil? && (current_user.director? || current_user.admin?)) %>
      <li role="presentation" class="col-xs-4">
        <%= link_to_current '管理中心', {controller: "user", action: "manage"} %>
      <li role="presentation" class="col-xs-4">
        <%= link_to_current '活动中心', projects_path %>
      </li>
      <li role="presentation" class="col-xs-4">
        <%= link_to_current '个人中心', user_path(current_user) %>
      </li>
    <% else %>
      <li role="presentation" class="col-xs-6">
        <%= link_to_current '活动中心', projects_path %>
      </li>
      <li role="presentation" class="col-xs-6">
        <% unless current_user.nil? %>
          <%= link_to_current '个人中心', user_path(current_user) %>
        <% else %>
          <%= link_to_current '个人中心', root_path %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>





