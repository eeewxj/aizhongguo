<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :nursing_home_id, "选择养老院：" %><br />
    <%= f.select :nursing_home_id, get_all_nursing_homes_as_options %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :start_at %><br>
    <%= f.datetime_select :start_at %>
  </div>
  <div class="field">
    <%= f.label :end_at %><br>
    <%= f.datetime_select :end_at %>
  </div>
  <div class="field">
    <%= f.label :staff_number %><br>
    <%= f.number_field :staff_number %>
  </div>

  <div class="field">
    <%= f.label :contact_id, "选择联系人" %><br>
    <%= f.select :contact_id, get_all_directors_as_options %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
