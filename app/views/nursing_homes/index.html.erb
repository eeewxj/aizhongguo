<h1>Listing nursing_homes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Contact</th>
      <th>Phone number</th>
      <th>Description</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nursing_homes.each do |nursing_home| %>
      <tr>
        <td><%= nursing_home.name %></td>
        <td><%= nursing_home.address %></td>
        <td><%= nursing_home.contact %></td>
        <td><%= nursing_home.phone_number %></td>
        <td><%= nursing_home.description %></td>
        <td><%= nursing_home.website %></td>
        <td><%= link_to 'Show', nursing_home %></td>
        <td><%= link_to 'Edit', edit_nursing_home_path(nursing_home) %></td>
        <td><%= link_to 'Destroy', nursing_home, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

