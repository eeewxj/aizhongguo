<h1>Listing records</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Resident</th>
      <th>Project</th>
      <th>Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.user_id %></td>
        <td><%= record.resident_id %></td>
        <td><%= record.project_id %></td>
        <td><%= record.desc %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Record', new_project_record_path(@records.first.project) %>
